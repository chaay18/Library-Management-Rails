<p id="notice"><%= notice %></p>

<h1>Documents</h1>

<%= form_tag documents_path, :method => "get" do %>
<% label_tag(:search, "Quel est l'ID du document? ")  %>
<%= text_field_tag :search, params[:search] ,class:"form-control me-2", placeholder:"ID du Document" %>
<br>
<%= submit_tag("Rechercher", :id => nil , class:"btn btn-secondary") %>
<%end%>
<br>
<hr>
<br>
<table class="table table-hover table-striped table-bordered">
  <thead class="table-dark">
    <tr>
      <!--<th>ID</th>-->
      <th>Titre</th>
      <!--<th>Nombre copies</th>-->
      <th>Auteur</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @documents.each do |document| %>
      <tr>
        <!--<td><% document.id %></td>-->
        <td><%= document.titre %></td>
        <!--<td><% document.nombre_copies %></td>-->
        <td><%= document.auteur.prenom %> <%= document.auteur.nom %></td>
        <td><%= link_to 'DÃ©tails', document, class:"btn btn-outline-primary btn-sm" %></td>
        <td><%= link_to 'Modifier', edit_document_path(document), class:"btn btn-outline-success btn-sm" %></td>
        <td><%= link_to 'Supprimer', document, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-outline-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Document', new_document_path, class:"btn btn-secondary" %>
