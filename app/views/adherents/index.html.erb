<p id="notice"><%= notice %></p>

<h1>Adherents</h1>

<%= form_tag adherents_path,:method => "get" do %>
<% label_tag(:search, "Quel est l'ID de l'adherent? ")  %>
<%= text_field_tag :search, params[:search] ,class:"form-control me-2", placeholder:"ID de l'Adherent" %>
<br>
<%= submit_tag("Rechercher", :id => nil , class:"btn btn-secondary") %>
<%end%>
<br>
<hr>
<br>

<table class="table table-hover table-striped table-bordered">
  <thead class="table-dark">
    <tr>
      <th>Nom</th>
      <th>Prenom</th>
      <!--<th>Tel</th>-->
      <!--<th>Email</th>-->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @adherents.each do |adherent| %>
      <tr>
        <td><%= adherent.nom %></td>
        <td><%= adherent.prenom %></td>
        <!--<td><% adherent.tel %></td>-->
        <!--<td><% adherent.email %></td>-->
        <td><%= link_to 'DÃ©tails', adherent , class:"btn btn-outline-primary btn-sm"%></td>
        <td><%= link_to 'Modifier', edit_adherent_path(adherent), class:"btn btn-outline-success btn-sm" %></td>
        <td><%= link_to 'Supprimer', adherent, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-outline-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

