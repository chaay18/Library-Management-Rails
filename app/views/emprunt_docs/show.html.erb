<h2 align="center">Document Emprunté <%= @emprunt_doc.id %> </h2>
<div class="mt-4 p-5 rounded bg-light ">
  
    <h5 class="display-5">
       Emprunt <%= @emprunt_doc.id %> 
    </h5>

    <hr class="my-4">

    <p class="lead">
      <strong>ID:</strong>
      <%= @emprunt_doc.id %>
    </p>
    <p class="lead">
      <strong>Adherent:</strong>
      <%= @emprunt_doc.adherent.prenom %>  <%= @emprunt_doc.adherent.nom %>
    </p>

    <p class="lead">
      <strong>ID Adherent:</strong>
      <%= @emprunt_doc.adherent.id %>
    </p>

    <p class="lead">
      <strong>Document Emprunté::</strong>
      <%= @emprunt_doc.document.titre %> 
    </p>

    <p class="lead">
      <strong>ID Document Emprunté:</strong>
      <%= @emprunt_doc.document.id %> <span></span> 
    </p>

  
    <%= link_to 'Modifier', edit_emprunt_doc_path(@emprunt_doc), class:"btn btn-secondary" %> 
    <%= link_to 'Supprimer', @emprunt_doc, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %>
    <%= link_to 'Retour', emprunt_docs_path, class:"btn btn-dark" %>
  </div>



